<label class="timeslot_card">
  <wa-card class="timeslot-card">
    <div class="displayed_time"> <%= @timeslot.start_time.strftime('%H:%M') %> : <%= @timeslot.end_time.strftime('%H:%M') %> </div>
  </wa-card>
  <input type="checkbox" name="selected_timeslot" />
</label>

<style>
  .timeslot_card {
    width: 100%;
    height: 100%;
    display: block;
    box-sizing: border-box;
    margin: 1%;
    padding: 0;
  }

  .timeslot_card wa-card {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--wa-color-surface-default) !important;
    border: none !important;
    border-radius: var(--wa-border-radius-m) !important;
    transition: all var(--wa-transition-normal) var(--wa-transition-easing) !important;
    box-sizing: border-box;
    cursor: pointer;
    box-shadow: 0 2px 0 0 var(--wa-color-gray-30) !important;
  }

  .timeslot_card input[type="checkbox"] {
    display: none;
  }

  .displayed_time {
    text-align: center;
    font-family: var(--wa-font-family-body);
    font-size: var(--wa-font-size-s);
    font-weight: var(--wa-font-weight-normal);
    color: var(--wa-color-text-normal);
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: var(--wa-space-xs);
  }

  /* Selected state - Green with elevated shadow */
  .timeslot_card:has(input:checked) wa-card {
    background-color: var(--wa-color-green-60) !important;
    box-shadow: 0 4px 0 0 var(--wa-color-green-20) !important;
  }

  .timeslot_card:has(input:checked) .displayed_time {
    color: white !important;
    font-weight: var(--wa-font-weight-bold);
  }

  /* Hover state - Slight elevation */
  .timeslot_card:hover wa-card {
    background-color: var(--wa-color-gray-90) !important;
    transform: translateY(-1px) !important;
    box-shadow: 0 3px 0 0 var(--wa-color-gray-40) !important;
  }

  /* Active/pressed state */
  .timeslot_card:active wa-card {
    transform: translateY(1px) !important;
    box-shadow: 0 1px 0 0 var(--wa-color-gray-30) !important;
  }

  /* Focus state for accessibility */
  .timeslot_card:focus-within wa-card {
    outline: var(--wa-focus-ring);
    outline-offset: var(--wa-focus-ring-offset);
  }

  /* Selected hover state */
  .timeslot_card:has(input:checked):hover wa-card {
    background-color: var(--wa-color-green-70) !important;
    transform: translateY(-1px) !important;
    box-shadow: 0 6px 0 0 var(--wa-color-green-20) !important;
  }

  /* Selected active state */
  .timeslot_card:has(input:checked):active wa-card {
    background-color: var(--wa-color-green-50) !important;
    transform: translateY(1px) !important;
    box-shadow: 0 2px 0 0 var(--wa-color-green-20) !important;
  }
</style>