<% days_order = [:monday, :tuesday, :wednesday, :thursday, :friday, :saturday, :sunday] %>

<table class="calendar-table">
  <thead>
    <tr>
      <th></th>
      <% days_order.each do |day| %>
        <th class="calendar-day-header"><%= day.to_s.titleize %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @time_labels.each do |time_label| %>
      <tr>
        <td class="calendar-time-label"><%= time_label %></td>
        <% days_order.each do |day| %>
          <% timeslot = (@week_days[day] || []).find { |ts| ts.start_time.strftime("%H:%M") == time_label } %>
          <td class="calendar-timeslot-cell">
            <% if timeslot %>
              <%= render TimeslotComponent.new(timeslot: timeslot) %>
            <% else %>
              <div class="empty-timeslot"></div>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
	.calendar-table {
	  width: 100%;
	  border-collapse: collapse;
	  table-layout: fixed;
	}
	.calendar-table th, .calendar-table td {
	  border: 1px solid #e0e0e0;
	  padding: 0px;
	  text-align: center;
	  vertical-align: center;
	  max-width: 150px;
	  overflow: hidden;
	}
	.calendar-day-header {
	  background: #f8f8f8;
	  font-weight: bold;
	  position: sticky;
	  top: 0;
	  z-index: 2;
	}
	.calendar-time-label {
	  background: #f0f0f0;
	  font-weight: bold;
	  position: sticky;
	  left: 0;
	  z-index: 1;
	}
	.empty-timeslot {
	  min-height: 24px;
	  background: #fafafa;
	}
</style>