<div class="wa-center registration-outer-center">
  <wa-card class="registration-card registration-card-split">
    <div class="registration-inner-split wa-flex">
      <!-- Left Banner (SVG) -->
      <div class="registration-banner wa-flex wa-center wa-justify-center">
        <%= image_tag "schedule-clone-svgrepo-com.svg", alt: "Schedule Icon", class: "banner-svg" %>
      </div>
      <!-- Right Registration Form -->
      <div class="registration-form-area wa-flex wa-center wa-justify-center">
        <div class="registration-form-fields wa-stack wa-gap-4">
          <h2 class="wa-text-center wa-mb-4">Register</h2>

          <% if resource.errors.any? %>
          <div class="wa-alert wa-alert-danger wa-mb-4">
            <h4 class="wa-mb-2">Please fix the following errors:</h4>
            <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
            <wa-input
              type="email"
              placeholder="Email"
              name="user[email]"
              required
              icon="user"
              class="wa-input"
            ></wa-input>

            <wa-input
              type="name"
              placeholder="Name"
              name="user[name]"
              required
              icon="user"
              class="wa-input"
            ></wa-input>

            <wa-input
              type="password"
              placeholder="Password"
              name="user[password]"
              required
              password-toggle
              icon="lock"
              class="wa-input"
            ></wa-input>

            <wa-input
              type="password"
              placeholder="Confirm Password"
              name="user[password_confirmation]"
              required
              password-toggle
              icon="lock"
              class="wa-input"
            ></wa-input>

            <wa-button class="blue" type="submit">Register</wa-button>
          <% end %>

          <div class="wa-text-center wa-mt-4">
            <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "wa-link" %>
          </div>
        </div>
      </div>
    </div>
  </wa-card>
</div>

<style>
.registration-outer-center {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--wa-color-gray-20, #181818);
}

.registration-card-split {
  max-width: 800px;
  width: 100%;
  padding: 0;
  border-radius: 2%;
  overflow: hidden;
  box-shadow: 1px 1px 12px 0px rgba(0,0,0,0.75);
  background-color: var(--wa-color-gray-30);
}

.registration-inner-split {
  display: flex;
  flex-direction: row;
  width: 100%;
  min-height: 400px;
}

.registration-banner {
  flex: 1 1 40%;
  background: var(--wa-color-primary-80, #222);
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 180px;
  max-width: 320px;
}

.banner-svg {
  max-width: 80%;
  max-height: 60%;
  display: block;
}

.registration-form-area {
  flex: 1 1 60%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--wa-color-gray-30);
  padding: 2.5rem 2rem;
}

.registration-form-fields {
  width: 100%;
  max-width: 320px;
}

.wa-link {
  color: white;
}

wa-input {
  margin-bottom: 1rem;
}

h2 {
  color: var(--wa-color-red-95);
}

wa-button.blue::part(base) {
  border-radius: 6px;
  border: solid 2px;
  background: #1e15a3;
  border-top-color: #c7c5f0;
  border-left-color: #c7c5f0;
  border-bottom-color: #04012e;
  border-right-color: #04012e;
  color: white;
  font-size: 1.125rem;
  box-shadow: 0 2px 10px #0002;
  transition: all var(--wa-transition-slow) var(--wa-transition-easing);
}

wa-button.blue::part(base):hover {
  transform: scale(1.05);
}

wa-button.blue::part(base):active {
  border-top-color: #04012e;
  border-right-color: #c7c5f0;
  border-bottom-color: #c7c5f0;
  border-left-color: #04012e;
  transform: translateY(1px);
}

wa-button.blue::part(base):focus-visible {
  outline: dashed 2px deeppink;
  outline-offset: 4px;
}

@media (max-width: 414px) {
  .registration-inner-split {
    flex-direction: column;
    min-height: unset;
  }
  .registration-banner {
    display: none !important;
  }
  .registration-form-area {
    flex: 1 1 100%;
    padding: 1.5rem 0.5rem;
  }
  .registration-card-split {
    max-width: 98vw;
    min-width: 0;
    border-radius: 3vw;
  }
  .registration-form-fields {
    max-width: 100vw;
  }
}
</style>

