<div class="wa-center login-outer-center">
  <wa-card class="login-card login-card-split">
    <div class="login-inner-split wa-flex">
      <!-- Left Banner (SVG) -->
      <div class="login-banner wa-flex wa-center wa-justify-center">
        <%= image_tag "schedule-clone-svgrepo-com.svg", alt: "Schedule Icon", class: "banner-svg" %>
      </div>
      <!-- Right Login Form -->
      <div class="login-form-area wa-flex wa-center wa-justify-center">
        <div class="login-form-fields wa-stack wa-gap-4">
          <div class="wa-text-center wa-mb-4" style="color: white; font-size: var(--wa-font-size-l); font-weight: var(--wa-font-weight-bold);">Sign In</div>

          <% if resource.errors.any? %>
          <wa-alert class="wa-alert--error">
            <wa-alert-title>Please fix the following errors:</wa-alert-title>
            <wa-alert-content>
              <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </wa-alert-content>
          </wa-alert>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
            <wa-input
              type="email"
              placeholder="Email"
              name="user[email]"
              required
              icon="user"
              class="wa-input"
            ></wa-input>

            <wa-input
              type="password"
              placeholder="Password"
              name="user[password]"
              required
              password-toggle
              icon="lock"
              class="wa-input"
            ></wa-input>

            <% if devise_mapping.rememberable? %>
              <div class="wa-checkbox-container">
                <wa-checkbox name="user[remember_me]" value="1">
                  Remember me
                </wa-checkbox>
              </div>
            <% end %>

            <wa-button type="submit" class="wa-button--filled wa-button--primary">
              Sign In
            </wa-button>
          <% end %>

          <div class="wa-text-center wa-mt-4">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "wa-link" %>
          </div>

          <div class="wa-text-center wa-mt-2">
            <%= link_to "Don't have an account? Register", new_registration_path(resource_name), class: "wa-link" %>
          </div>
        </div>
      </div>
    </div>
  </wa-card>
</div>

<style>
body, html {
  margin: 0;
  padding: 0;
  height: 100%;
}

.login-outer-center {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--wa-color-cyan-40);
}

.login-card-split {
  max-width: 800px;
  width: 100%;
  --spacing: 0 !important;
  padding: 0;
  border-radius: 2%;
  overflow: hidden;
  box-shadow: 1px 1px 12px 0px rgba(0,0,0,0.75);
  background-color: var(--wa-color-surface-default);
}

.login-inner-split {
  display: flex;
  flex-direction: row;
  width: 100%;
  min-height: 400px;
}

.login-banner {
  flex: 1 1 40%;
  background: var(--wa-color-primary-80);
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 180px;
  max-width: 320px;
}

.banner-svg {
  max-width: 80%;
  max-height: 60%;
  display: block;
}

.login-form-area {
  flex: 1 1 60%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--wa-color-orange-60);
  padding: 2.5rem 2rem;
}

.login-form-fields {
  width: 100%;
  max-width: 320px;
}

wa-button[type="submit"] {
  width: 100%;
}

wa-button[type="submit"]::part(base) {
  border-radius: var(--wa-border-radius-l) !important;
  padding: var(--wa-space-m) var(--wa-space-l) !important;
  font-size: var(--wa-font-size-m) !important;
  font-weight: var(--wa-font-weight-bold) !important;
  background-color: var(--wa-color-green-60) !important;
  color: white !important;
  border: none !important;
  box-shadow: 0 4px 0 0 var(--wa-color-green-20) !important;
}

wa-button[type="submit"]:hover::part(base) {
  background-color: var(--wa-color-green-70) !important;
  transform: translateY(-1px) !important;
  box-shadow: 0 6px 0 0 var(--wa-color-green-20) !important;
}

wa-button[type="submit"]:active::part(base) {
  background-color: var(--wa-color-green-50) !important;
  transform: translateY(1px) !important;
  box-shadow: 0 2px 0 0 var(--wa-color-green-20) !important;
}

.wa-link {
  color: var(--wa-color-text-link);
}

wa-input {
  margin-bottom: 1rem;
}

.wa-checkbox-container {
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
}

wa-checkbox {
  color: white;
  font-size: var(--wa-font-size-s);
}

@media (max-width: 414px) {
  .login-inner-split {
    flex-direction: column;
    min-height: unset;
  }
  .login-banner {
    display: none !important;
  }
  .login-form-area {
    flex: 1 1 100%;
    padding: 1.5rem 0.5rem;
  }
  .login-card-split {
    max-width: 98vw;
    min-width: 0;
    border-radius: 3vw;
  }
  .login-form-fields {
    max-width: 100vw;
  }
}
</style>